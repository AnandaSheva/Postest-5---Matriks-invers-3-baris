#include <iostream>
using namespace std;

int main(){
//baris 6-8 = deklarasi setiap variabel
	int matriks1[3][3];
	int matriks2[3][3];
	int hasil[3][3];
	
//baris 11-18 = meng-input bilangan pada setiap matriks 1
	for(int i=0;i<3;i++){
		for(int j=0;j<3;j++){
			cout<<"Matriks 1 "<<"baris " <<i+1<<" kolom "<<j+1<<": ";
			cin>>matriks1[i][j];
		}
		cout<<endl;
	}
	cout<<endl;
	
//baris 21-28 = meng-input bilangan pada setiap matriks 2
	for(int i=0;i<3;i++){
		for(int j=0;j<3;j++){
			cout<<"Matriks 2 "<<"baris "<<i+1<<" kolom "<<j+1<<": ";
			cin>>matriks2[i][j];
		}
		cout<<endl;
	}
	cout<<endl;
	
//baris 31-39 = output hasil penjumlahan bilangan matriks
		cout<<"Hasil Penjumlahan Matriks : "<<endl;
		for(int i=0;i<3;i++){
			for(int j=0;j<3;j++){
			hasil[j][i]=matriks1[j][i]+matriks2[j][i];
			cout<<hasil[j][i]<<" ";
		}
		cout<<endl;
	}
	cout<<endl;

return 0;
}
